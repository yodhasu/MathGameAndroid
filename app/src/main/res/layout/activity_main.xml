<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#303238"
    tools:context=".MainActivity" >

    <ImageView
        android:id="@+id/enemyPng"
        android:layout_width="150dp"
        android:layout_height="150dp"
        tools:layout_editor_absoluteX="234dp"
        tools:layout_editor_absoluteY="208dp"
        tools:srcCompat="@tools:sample/avatars" />

    <ImageView
        android:id="@+id/playerPng"
        android:layout_width="150dp"
        android:layout_height="150dp"
        tools:layout_editor_absoluteX="36dp"
        tools:layout_editor_absoluteY="208dp"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tittleText"
        android:layout_width="248dp"
        android:layout_height="62dp"
        android:fontFamily="@font/pixelify_sans"
        android:text="TextView"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        android:textColor="#FFFCFC"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="81dp"
        tools:layout_editor_absoluteY="53dp" />

    <TextView
        android:id="@+id/textonly"
        android:layout_width="248dp"
        android:layout_height="62dp"
        android:fontFamily="@font/pixelify_sans"
        android:text="Choose the correct answer!"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        android:textColor="#FFFCFC"
        android:textSize="24sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="81dp"
        tools:layout_editor_absoluteY="386dp" />

    <TextView
        android:id="@+id/playerHP"
        android:layout_width="99dp"
        android:layout_height="43dp"
        android:fontFamily="@font/pixelify_sans"
        android:text="HP"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        android:textColor="#FFFCFC"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="62dp"
        tools:layout_editor_absoluteY="157dp" />

    <TextView
        android:id="@+id/enemyHP"
        android:layout_width="99dp"
        android:layout_height="43dp"
        android:fontFamily="@font/pixelify_sans"
        android:text="HP"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        android:textColor="#FFFCFC"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="257dp"
        tools:layout_editor_absoluteY="157dp" />

    <Button
        android:id="@+id/ans1"
        android:layout_width="238dp"
        android:layout_height="60dp"
        android:text="Button"
        tools:layout_editor_absoluteX="86dp"
        tools:layout_editor_absoluteY="468dp" />

    <Button
        android:id="@+id/ans2"
        android:layout_width="238dp"
        android:layout_height="60dp"
        android:text="Button"
        tools:layout_editor_absoluteX="86dp"
        tools:layout_editor_absoluteY="547dp" />

    <Button
        android:id="@+id/ans3"
        android:layout_width="238dp"
        android:layout_height="60dp"
        android:text="Button"
        tools:layout_editor_absoluteX="86dp"
        tools:layout_editor_absoluteY="625dp" />

</androidx.constraintlayout.widget.ConstraintLayout>